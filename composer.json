{
    "name": "php-kafka/avsc-json-converter",
    "description": "Library that converts Avsc to JSON schema",
    "license": [
        "BSD-3-Clause"
    ],
    "authors": [
        {
            "name": "php-kafka",
            "homepage": "https://php-kafka.com"
        },
        {
            "name": "Nick",
            "email": "coding.nikazu@gmail.com",
            "homepage": "https://github.com/nick-zh"
        }
    ],
    "keywords": [
        "avsc",
        "json",
        "schema",
        "converter"
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "symfony/console": "^5.3",
        "pimple/pimple": "^3.5"
    },
    "require-dev": {
        "infection/infection": "^0.25.3",
        "johnkary/phpunit-speedtrap": "^4.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "rregeer/phpunit-coverage-check": "^0.3.1",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "allow-plugins": {
        "infection/*": true
    },
    "bin": [
        "bin/avsc-to-json"
    ],
    "autoload": {
        "psr-4": {
            "PhpKafka\\AvscJsonConverter\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/php-kafka/avsc-json-converter/issues"
    }
}
